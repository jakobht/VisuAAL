<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Accordion?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TitledPane?>
<?import javafx.scene.layout.AnchorPane?>

<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.control.Label?>
<?import View.IntegerTextField?>
<?import javafx.scene.control.Button?>
<Accordion xmlns="http://javafx.com/javafx/8.0.112" xmlns:fx="http://javafx.com/fxml/1" fx:controller="View.simulation.SimulationMenuController">
   <panes>
       <TitledPane text="Display">
           <content>
               <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
                   <children>
                       <ListView fx:id="lstDisplayOptions" prefHeight="200.0" prefWidth="200.0" />
                   </children>
               </AnchorPane>
           </content>
       </TitledPane>
       <TitledPane text="Simulations">
           <content>
               <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
                   <children>
                       <ListView fx:id="lstSimulationOptions" prefHeight="200.0" prefWidth="200.0" />
                   </children>
               </AnchorPane>
           </content>
       </TitledPane>
       <TitledPane text="Export">
           <content>
               <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
                   <children>
                       <ListView fx:id="lstExportOptions" prefHeight="200.0" prefWidth="200.0" />
                   </children>
               </AnchorPane>
           </content>
       </TitledPane>
       <TitledPane text="Settings">
           <content>
               <GridPane>
                   <Label text="Min edge value " GridPane.columnIndex="0" GridPane.rowIndex="0" />
                   <IntegerTextField fx:id="minValueText" GridPane.columnIndex="1" GridPane.rowIndex="0" />
                   <Label text="Max edge value " GridPane.columnIndex="0" GridPane.rowIndex="1" />
                   <IntegerTextField fx:id="maxValueText" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                   <Button text = "Save values" GridPane.halignment="CENTER" onAction="#saveMinMaxValues"  GridPane.columnIndex="0" GridPane.columnSpan="2" GridPane.rowIndex="2"/>
               </GridPane>
           </content>
       </TitledPane>
   </panes>
</Accordion>
